<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-book<% } else { %>add-book<% } %>" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid' : '' %>"
                    type="text" 
                    name="title" 
                    id="title" 
                    value="<% if (editing || hasError) { %><%= book.title %><% } %>">
            </div>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-book<% } else { %>add-book<% } %>" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="authorName">Author Name</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'auhorName') ? 'invalid' : '' %>"
                    type="text" 
                    name="authorName" 
                    id="authorName" 
                    value="<% if (editing || hasError) { %><%= book.authorName %><% } %>">
            </div>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-book<% } else { %>add-book<% } %>" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="pages">Pages</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'pages') ? 'invalid' : '' %>"
                    type="number" 
                    name="pages" 
                    id="pages" 
                    value="<% if (editing || hasError) { %><%= book.pages %><% } %>">
            </div>
            <form class="product-form" action="/admin/<% if (editing) { %>edit-book<% } else { %>add-book<% } %>" method="POST" enctype="multipart/form-data">
                <div class="form-control">
                    <label for="publisher">Publisher</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'publisher') ? 'invalid' : '' %>"
                        type="text" 
                        name="publisher" 
                        id="publisher" 
                        value="<% if (editing || hasError) { %><%= book.publisher %><% } %>">
                </div>
            <form class="product-form" action="/admin/<% if (editing) { %>edit-book<% } else { %>add-book<% } %>" method="POST" enctype="multipart/form-data">
                <div class="form-control">
                    <label for="isbn">ISBN</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'isbn') ? 'invalid' : '' %>"
                        type="text" 
                        name="isbn" 
                        id="isbn" 
                        value="<% if (editing || hasError) { %><%= book.isbn %><% } %>">
                </div>
            <!-- <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'imageUrl') ? 'invalid' : '' %>"
                    type="text" 
                    name="imageUrl" 
                    id="imageUrl" 
                    value="<% if (editing || hasError) { %><%= book.imageUrl %><% } %>">
            </div> -->
            <div class="form-control">
                <label for="image">Image</label>
                <input 
                    type="file" 
                    name="image" 
                    id="image" >
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'price') ? 'invalid' : '' %>"
                    type="number" 
                    name="price" 
                    id="price" 
                    step="0.01" 
                    value="<% if (editing || hasError) { %><%= book.price %><% } %>">
            </div>
            <div class="form-control">
                    <label for="reviews">Reviews</label>
                    <textarea 
                        class="<%= validationErrors.find(e => e.param === 'reviews') ? 'invalid' : '' %>"
                        name="reviews" 
                        id="reviews" 
                        rows="5"><% if (editing || hasError) { %><%= book.reviews %><% } %></textarea>
            </div>
            <div class="form-control">
                <label for="summary">Summary</label>
                <textarea 
                    class="<%= validationErrors.find(e => e.param === 'summary') ? 'invalid' : '' %>"
                    name="summary" 
                    id="summary" 
                    rows="5"><% if (editing || hasError) { %><%= book.summary %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= book._id %>" name="bookId">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) { %>Update Book<% } else { %>Add Book<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>