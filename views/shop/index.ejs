<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let book of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= book.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="/<%= book.imageUrl %>"
                                alt="<%= book.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= book.price %></h2>
                            <h2 class="product__price">Author Name: <%= book.authorName %></h2><br>
                            <h2 class="product__price">Summary</h2>
                            <p class="product__description"><%= book.summary %></p><br>
                            <h2 class="product__price">Reviews</h2>
                            <p class="product__description"><%= book.reviews %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/books/<%= book._id %>" class="btn">Details</a>
                            <% if (isAuthenticated) { %>
                                <%- include('../includes/add-to-cart.ejs', {book: book}) %>
                            <% } %>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Books Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>